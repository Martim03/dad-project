{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Server 1",
            "type": "shell",
            "command": "mvn exec:java -Dexec.args=\"8080 0\"",
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "presentation": {
                "panel": "dedicated",
                "group": "terminals",
                "showReuseMessage": false,
                "clear": true
